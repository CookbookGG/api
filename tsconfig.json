    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["ES2021.String"],
    "outDir": "dist"
  },
  "include": ["./**/*", "index.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
